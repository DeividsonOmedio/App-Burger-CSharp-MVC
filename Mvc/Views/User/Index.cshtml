@model Cadastre

<div class="container my-5">
    <h2 class="text-center mb-4">Finalização do Cadastro</h2>

    <form asp-controller="User" asp-action="AddNewCadastre" method="post">
        <div class="form-group">
            <label for="Name">Nome</label>
            <input type="text" class="form-control" id="Name" name="Name" disabled value="@Model.Name" />
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" disabled value="@Model.Email" />
        </div>

        <div class="form-group">
            <label for="PhoneNumber">Telefone</label>
            <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" placeholder="Telefone" value="@Model.PhoneNumber" />
        </div>

        <div class="form-group">
            <label for="DataBirth">Data de Nascimento</label>
            <input type="date" class="form-control" id="DataBirth" name="DataBirth" placeholder="Data de Nascimento" value="@Model.DataBirth" />
        </div>

        <h3 class="text-center my-4">Cadastre seu Endereço</h3>

        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="street">Logradouro</label>
                <input type="text" class="form-control" id="street" name="street" placeholder="Logradouro" />
            </div>

            <div class="form-group col-md-4">
                <label for="number">Número</label>
                <input type="number" class="form-control" id="number" name="number" placeholder="Número" />
            </div>
        </div>

        <div class="form-group">
            <label for="referency">Referência</label>
            <input type="text" class="form-control" id="referency" name="referency" placeholder="Referência" />
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="zipCode">CEP</label>
                <input type="text" class="form-control" id="zipCode" name="zipCode" placeholder="CEP" />
            </div>

            <div class="form-group col-md-4">
                <label for="city">Cidade</label>
                <input type="text" class="form-control" id="city" name="city" placeholder="Cidade" />
            </div>

            <div class="form-group col-md-4">
                <label for="state">Estado</label>
                <input type="text" class="form-control" id="state" name="state" placeholder="Estado" />
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-check"></i> Adicionar
            </button>
        </div>
    </form>
</div>

<!-- Bibliotecas necessárias do Bootstrap e Font Awesome -->
