@model Employee

@{
    ViewData["Title"] = "Deletar Produto";
}

<div class="container mt-5">
    <h2 class="text-center">Deletar Funcionário</h2>

    <form asp-action="Delete" method="post" class="mt-4">
        <div class="form-group">
            <label for="Name">Nome do Funcionário</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" disabled />
        </div>

        <div class="form-group">
            <label for="Function">Função</label>
            <input type="text" class="form-control" id="Function" name="Function" value="@Model.Function" disabled />
        </div>

        <button type="submit" class="btn btn-primary">Deletar</button>
        <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>