@model IEnumerable<Material>

@{
    ViewBag.Title = "Materiais";
}

<h2>Materiais</h2>

<div class="row">
    <div class="col-md-12">
        <h3>Lista de Materiais</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Material</th>
                    <th>Quantidade</th>
                    <th>Valor</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Amount</td>
                        <td>R$ @item.PurchasePrice.ToString("F2")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>