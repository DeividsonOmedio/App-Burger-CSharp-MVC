@model Employee

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container mt-5">
    <h2 class="text-center">Editar Funcionário</h2>

    <form asp-action="Edit" method="post" class="mt-4">
        <div class="form-group">
            <label for="Name">Nome do Funcionário</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
        </div>

        <div class="form-group">
            <label for="Function">Função</label>
            <select class="form-control" id="Function" name="Function">
                @foreach (var function in Enum.GetValues(typeof(Mvc.Models.Enums.EnumFunctionEmployee)))
                {
                    <option value="@function">@function</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
        <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>